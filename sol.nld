#Defina sol_saveline(Linha)	add_history(Linha)
#Defina sol_freeline(Linha)	free(Linha)

#Senão		/* }{ */
/* use dynamically loaded readline (or nothing) */

/* pointer to 'readline' function (Se any) */
Pseudônimo Caractere *(*l_readlineT) (Imutável Caractere *prompt);
Fixo l_readlineT l_readline = NULL;

/* pointer to 'add_history' function (Se any) */
Pseudônimo Vazio (*l_addhistT) (Imutável Caractere *string);
Fixo l_addhistT l_addhist = NULL;


Fixo Caractere *sol_readline (Caractere *buff, Imutável Caractere *prompt) {
  Se (l_readline != NULL)  /* is there a 'readline'? */
    Retorne (*l_readline)(prompt);  /* use it */
  Senão {  /* emulate 'readline' over 'buff' */
    fputs(prompt, stdout);
    fflush(stdout);  /* show prompt */
    Retorne fgets(buff, SOL_MAXINPUT, stdin);  /* read Linha */
  }
}

/* Temporary debug: dump hex bytes of readline input */
Fixo Vazio debug_hex_dump(Imutável Caractere *label, Imutável Caractere *s) {
  Inteiro i;
  fprintf(stderr, "[DEBUG %s] bytes: ", label);
  Para (i = 0; s[i] != '\0' && i < 40; i++)
    fprintf(stderr, "%02X ", (Natural Caractere)s[i]);
  fprintf(stderr, "\n");
  fflush(stderr);
}


Fixo Vazio sol_saveline (Imutável Caractere *Linha) {
  Se (l_addhist != NULL)  /* is there an 'add_history'? */
    (*l_addhist)(Linha);  /* use it */
  /* Senão nothing to be done */
}


Fixo Vazio sol_freeline (Caractere *Linha) {
  Se (l_readline != NULL)  /* is there a 'readline'? */
    free(Linha);  /* free Linha created by it */
  /* Senão 'sol_readline' used an automatic buffer; nothing to free */
}


