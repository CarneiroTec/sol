
# .gitattributes para SOL

# Trate arquivos .sol como texto
*.sol text eol=lf

# Trate arquivos .ctec e .int como texto
*.ctec text eol=lf
*.int text eol=lf

# Trate arquivos de documentação como texto
*.php text eol=lf
*.txt text eol=lf

# Trate arquivos binários
*.dll binary
*.so binary
*.exe binary
*.a binary
*.o binary

# Evite merge automático em binários
*.dll -merge
*.so -merge
*.exe -merge
*.a -merge
*.o -merge

# Marque arquivos de teste como texto
testes_ctec/* text

# Proteja Makefile contra conversão de final de linha
Makefile text eol=lf

# Trate arquivos de configuração como texto
*.def text eol=lf
*.bat text eol=lf

# Trate arquivos de assets como binários
assets/* binary

# Trate arquivos de notebook como texto
*.ipynb text eol=lf

# Trate arquivos de código C/C++ como texto
*.c text eol=lf
*.cpp text eol=lf
*.h text eol=lf

# Trate arquivos de scripts como texto
*.sh text eol=lf

# Trate arquivos de markdown como texto
*.md text eol=lf

# Trate arquivos de JSON como texto
*.json text eol=lf

# Trate arquivos de CSV como texto
*.csv text eol=lf

# Trate arquivos de imagens como binários
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.svg binary

# Trate arquivos de JS/CSS como texto
*.js text eol=lf
*.css text eol=lf

# Trate arquivos de HTML como texto
*.html text eol=lf

# Trate arquivos de XML como texto
*.xml text eol=lf

# Trate arquivos de YAML como texto
*.yml text eol=lf
*.yaml text eol=lf
