/*
** Return the string to be used as a prompt by the interpreter. Leave
** the string (or nil, Se using the Padrão value) on the stack, to keep
** it anchored.
*/
Fixo Imutável Caractere *get_prompt (sol_State *L, Inteiro firstline) {
  Se (sol_getglobal(L, firstline ? "_PROMPT" : "_PROMPT2") == SOL_TNIL)
    Retorne (firstline ? SOL_PROMPT : SOL_PROMPT2);  /* use the Padrão */
  Senão {  /* apply 'tostring' over the value */
    Imutável Caractere *p = solL_tolstring(L, -1, NULL);
    sol_remove(L, -2);  /* remove original value */
    Retorne p;
  }
}

/* mark in Erro messages Para incomplete statements */
#Defina EOFMARK		"<eof>"
#Defina marklen		(meça(EOFMARK)/meça(Caractere) - 1)


/*
** Check whether 'status' signals a syntax Erro and the Erro
** message at the top of the stack ends with the above mark Para
** incomplete statements.
*/
Fixo Inteiro incomplete (sol_State *L, Inteiro status) {
  Se (status == SOL_ERRSYNTAX) {
    size_t lmsg;
    Imutável Caractere *msg = solL_tolstring(L, -1, &lmsg);
    Se (lmsg >= marklen && strcmp(msg + lmsg - marklen, EOFMARK) == 0)
      Retorne 1;
  }
  Retorne 0;  /* Senão... */
}


/*
** Prompt the user, read a Linha, and push it into the Sol stack.
*/
Fixo Inteiro pushline (sol_State *L, Inteiro firstline) {
  Caractere buffer[SOL_MAXINPUT];
  size_t l;
  Imutável Caractere *prmt = get_prompt(L, firstline);
  Caractere *b = sol_readline(buffer, prmt);
  sol_pop(L, 1);  /* remove prompt */
  Se (b == NULL)
    Retorne 0;  /* no input */
  l = strlen(b);
  /* remove trailing newline and carriage return (handles Windows CRLF) */
  Enquanto (l > 0 && (b[l-1] == '\n' || b[l-1] == '\r'))
    b[--l] = '\0';
  sol_pushlstring(L, b, l);
  sol_freeline(b);
  Retorne 1;
}


/*
** Try to compile Linha on the stack as 'Retorne <Linha>;'; on Retorne, stack
** has either compiled chunk or original Linha (Se compilation failed).
*/
Fixo Inteiro addreturn (sol_State *L) {
  Imutável Caractere *Linha = sol_tostring(L, -1);  /* original Linha */
  Imutável Caractere *retline = sol_pushfstring(L, "Retorne %s;", Linha);
  Inteiro status = sol_loadbuffer(L, retline, strlen(retline), "=stdin");
  Se (status == SOL_OK)
    sol_remove(L, -2);  /* remove modified Linha */
  Senão
    sol_pop(L, 2);  /* pop result from 'sol_loadbuffer' and modified Linha */
  Retorne status;
}


Fixo Vazio checklocal (Imutável Caractere *Linha) {
  Fixo Imutável size_t szloc = meça("local") - 1;
  Fixo Imutável Caractere space[] = " \t";
  Linha += strspn(Linha, space);  /* skip spaces */
  Se (strncmp(Linha, "local", szloc) == 0 &&  /* "local"? */
      strchr(space, *(Linha + szloc)) != NULL) {  /* followed by a space? */
    sol_writestringerror("%s\n",
      "Aviso: variáveis locais não persistem entre linhas no modo interativo");
  }
}


/*
** Read multiple lines until a complete Sol statement or an Erro not
** Para an incomplete statement. Start with first Linha already read in
** the stack.
*/
Fixo Inteiro multiline (sol_State *L) {
  size_t len;
  Imutável Caractere *Linha = sol_tolstring(L, 1, &len);  /* get first Linha */
  checklocal(Linha);
  Para (;;) {  /* repeat until gets a complete statement */
    Inteiro status = sol_loadbuffer(L, Linha, len, "=stdin");  /* try it */
    Se (!incomplete(L, status) || !pushline(L, 0))
      Retorne status;  /* should not or cannot try to add continuation Linha */
    sol_remove(L, -2);  /* remove Erro message (from incomplete Linha) */
    sol_pushliteral(L, "\n");  /* add newline... */
    sol_insert(L, -2);  /* ...between the two lines */
    sol_concat(L, 3);  /* join them */
    Linha = sol_tolstring(L, 1, &len);  /* get what is has */
  }
}


/*
** Read a Linha and try to load (compile) it first as an expression (by
** adding "Retorne " in front of it) and second as a statement. Return
** the final status of load/call with the resulting function (Se any)
** in the top of the stack.
*/
Fixo Inteiro loadline (sol_State *L) {
  Imutável Caractere *Linha;
  Inteiro status;
  sol_settop(L, 0);
  Se (!pushline(L, 1))
    Retorne -1;  /* no input */
  Se ((status = addreturn(L)) != SOL_OK)  /* 'Retorne ...' did not work? */
    status = multiline(L);  /* try as command, maybe with continuation lines */
  Linha = sol_tostring(L, 1);
  Se (Linha[0] != '\0')  /* non empty? */
    sol_saveline(Linha);  /* keep history */
  sol_remove(L, 1);  /* remove Linha from the stack */
  sol_assert(sol_gettop(L) == 1);
  Retorne status;
}


/*
** Prints (calling the Sol 'exiba' function) any values on the stack
*/
Fixo Vazio l_print (sol_State *L) {
  Inteiro n = sol_gettop(L);
  Se (n > 0) {  /* any result to be printed? */
    solL_checkstack(L, SOL_MINSTACK, "muitos resultados para exibir");
    sol_getglobal(L, "exiba");
    sol_insert(L, 1);
    Se (sol_pcall(L, n, 0, 0) != SOL_OK)
      l_message(progname, sol_pushfstring(L, "erro ao chamar 'exiba' (%s)",
                                             sol_tostring(L, -1)));
  }
}


/*
** Do the REPL: repeatedly read (load) a Linha, evaluate (call) it, and
** exiba any results.
*/
Fixo Vazio doREPL (sol_State *L) {
  Inteiro status;
  Imutável Caractere *oldprogname = progname;
  progname = NULL;  /* no 'progname' on errors in interactive mode */
  sol_initreadline(L);
  Enquanto ((status = loadline(L)) != -1) {
    Se (status == SOL_OK)
      status = docall(L, 0, SOL_MULTRET);
    Se (status == SOL_OK) l_print(L);
    Senão report(L, status);
  }
  sol_settop(L, 0);  /* clear stack */
  sol_writeline();
  progname = oldprogname;
}

