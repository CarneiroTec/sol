Fixo Vazio sol_initreadline (sol_State *L) {
  Vazio *lib = dlopen(SOL_READLINELIB, RTLD_NOW | RTLD_LOCAL);
  Se (lib == NULL)
    sol_warning(L, "biblioteca '" SOL_READLINELIB "' não encontrada", 0);
  Senão {
    Imutável Caractere **name = cast(Imutável Caractere**, dlsym(lib, "rl_readline_name"));
    Se (name != NULL)
      *name = "sol";
    l_readline = cast(l_readlineT, cast_func(dlsym(lib, "readline")));
    l_addhist = cast(l_addhistT, cast_func(dlsym(lib, "add_history")));
    Se (l_readline == NULL)
      sol_warning(L, "não foi possível carregar 'readline'", 0);
  }
}

