#Defina sol_openlibs(L)	sol_openselectedlibs(L, ~0, 0)
#FimSe


/*
** Início body of stand-alone interpreter (to be called in protected mode).
** Reads the options and handles them all.
*/
Fixo Inteiro pInício (sol_State *L) {
  Inteiro argc = (Inteiro)sol_tointeger(L, 1);
  Caractere **argv = (Caractere **)sol_touserdata(L, 2);
  Inteiro script;
  Inteiro args = collectargs(argv, &script);
  Inteiro optlim = (script > 0) ? script : argc; /* first argv not an option */
  sol_checkversion(L);  /* check that interpreter has correct version */
  Se (args == has_error) {  /* bad arg? */
    print_usage(argv[script]);  /* 'script' has index of bad arg. */
    Retorne 0;
  }
  Se (args & has_help) {  /* option '--help'? */
    print_usage(NULL);
    Retorne 0;
  }
  Se (args & has_lsp) {  /* option '--lsp'? */
    sol_openlibs(L);  /* CRÍTICO: Carregar libs ANTES do LSP (inclui nds) */
    lsp_main(L);
    sol_pushboolean(L, 1);
    Retorne 1;
  }
  Se (args & has_v)  /* option '-v'? */
    print_version();
  Se (args & has_E) {  /* option '-E'? */
    sol_pushboolean(L, 1);  /* signal Para libraries to ignore env. vars. */
    sol_setfield(L, SOL_REGISTRYINDEX, "SOL_NOENV");
  }
  sol_openlibs(L);  /* open standard libraries */
  createargtable(L, argv, argc, script);  /* create table 'arg' */
  sol_gc(L, SOL_GCRESTART);  /* start GC... */
  sol_gc(L, SOL_GCGEN);  /* ...in generational mode */
  
  Se (run_bundle(L, argv, argc)) {
    Retorne 1;
  }

  Se (!(args & has_E)) {  /* no option '-E'? */
    Se (handle_luainit(L) != SOL_OK)  /* run SOL_INIT */
      Retorne 0;  /* Erro running SOL_INIT */
  }
  Se (!runargs(L, argv, optlim))  /* execute arguments -e and -l */
    Retorne 0;  /* something failed */
  Se (args & has_build) {
    Se (script > 0) {
      Se (bundle_script(L, argv[script], outputname)) {
        sol_pushboolean(L, 1);
        Retorne 1;
      }
      Senão Retorne 0;
    }
    Senão {
        sol_writestringerror("%s", "erro: -b precisa de um script\n");
        Retorne 0;
    }
  }
  Senão Se (script > 0) {  /* execute Início script (Se there is one) */
    Se (handle_script(L, argv + script) != SOL_OK)
      Retorne 0;  /* interrupt in Caso of Erro */
  }
  Se (args & has_i)  /* -i option? */
    doREPL(L);  /* Faça read-eval-exiba loop */
  Senão Se (script < 1 && !(args & (has_e | has_v))) { /* no active option? */
    Se (sol_stdin_is_tty()) {  /* running in interactive mode? */
      print_version();
      doREPL(L);  /* Faça read-eval-exiba loop */
    }
    Senão dofile(L, NULL);  /* executes stdin as a file */
  }
  sol_pushboolean(L, 1);  /* signal no errors */
  Retorne 1;
}


Inteiro Início (Inteiro argc, Caractere **argv) {
  Inteiro status, result;
#Se Definido(SOL_USE_WINDOWS)
  SetConsoleCP(65001);           /* set console input to UTF-8 */
  SetConsoleOutputCP(65001);     /* set console output to UTF-8 */
  _setmode(_fileno(stdin), _O_BINARY);   /* raw byte passthrough for UTF-8 */
  _setmode(_fileno(stdout), _O_BINARY);
  _setmode(_fileno(stderr), _O_BINARY);
#FimSe
  setlocale(LC_ALL, "");  /* use system locale (UTF-8 on modern systems) */
  sol_State *L = solL_newstate();  /* create state */
  Se (L == NULL) {
    l_message(argv[0], "não foi possível criar estado: memória insuficiente");
    Retorne EXIT_FAILURE;
  }
  sol_gc(L, SOL_GCSTOP);  /* stop GC Enquanto building state */
  sol_pushcfunction(L, &pInício);  /* to call 'pInício' in protected mode */
  sol_pushinteger(L, argc);  /* 1st argument */
  sol_pushlightuserdata(L, argv); /* 2nd argument */
  status = sol_pcall(L, 2, 1, 0);  /* Faça the call */
  result = sol_toboolean(L, -1);  /* get result */
  report(L, status);
  sol_close(L);
  Retorne (result && status == SOL_OK) ? EXIT_SUCCESS : EXIT_FAILURE;
}

