/*
** Create the 'arg' table, which stores all arguments from the
** command Linha ('argv'). It should be aligned so that, at index 0,
** it has 'argv[script]', which is the script name. The arguments
** to the script (everything after 'script') go to positive indices;
** other arguments (before the script name) go to negative indices.
** If there is no script name, assume interpreter's name as base.
** (If there is no interpreter's name either, 'script' is -1, so
** table sizes are zero.)
*/
Fixo Vazio createargtable (sol_State *L, Caractere **argv, Inteiro argc, Inteiro script) {
  Inteiro i, narg;
  narg = argc - (script + 1);  /* number of positive indices */
  sol_createtable(L, narg, script + 1);
  Para (i = 0; i < argc; i++) {
    sol_pushstring(L, argv[i]);
    sol_rawseti(L, -2, i - script);
  }
  sol_setglobal(L, "arg");
}


Fixo Inteiro dochunk (sol_State *L, Inteiro status) {
  Se (status == SOL_OK) status = docall(L, 0, 0);
  Retorne report(L, status);
}


Fixo Inteiro dofile (sol_State *L, Imutável Caractere *name) {
  Retorne dochunk(L, sol_loadfile(L, name));
}


Fixo Inteiro dostring (sol_State *L, Imutável Caractere *s, Imutável Caractere *name) {
  Retorne dochunk(L, sol_loadbuffer(L, s, strlen(s), name));
}


/*
** Receives 'globname[=modname]' and runs 'globname = require(modname)'.
** If there is no explicit modname and globname contains a '-', cut
** the suffix after '-' (the "version") to make the global name.
*/
Fixo Inteiro dolibrary (sol_State *L, Caractere *globname) {
  Inteiro status;
  Caractere *suffix = NULL;
  Caractere *modname = strchr(globname, '=');
  Se (modname == NULL) {  /* no explicit name? */
    modname = globname;  /* module name is equal to global name */
    suffix = strchr(modname, *SOL_IGMARK);  /* look Para a suffix mark */
  }
  Senão {
    *modname = '\0';  /* global name ends here */
    modname++;  /* module name starts after the '=' */
  }
  sol_getglobal(L, "require");
  sol_pushstring(L, modname);
  status = docall(L, 1, 1);  /* call 'require(modname)' */
  Se (status == SOL_OK) {
    Se (suffix != NULL)  /* is there a suffix mark? */
      *suffix = '\0';  /* remove suffix from global name */
    sol_setglobal(L, globname);  /* globname = require(modname) */
  }
  Retorne report(L, status);
}


/*
** Push on the stack the contents of table 'arg' from 1 to #arg
*/
Fixo Inteiro pushargs (sol_State *L) {
  Inteiro i, n;
  Se (sol_getglobal(L, "arg") != SOL_TTABLE)
    solL_error(L, "'arg' não é uma tabela");
  n = (Inteiro)solL_len(L, -1);
  solL_checkstack(L, n + 3, "muitos argumentos para o script");
  Para (i = 1; i <= n; i++)
    sol_rawgeti(L, -i, i);
  sol_remove(L, -i);  /* remove table from the stack */
  Retorne n;
}


Fixo Inteiro handle_script (sol_State *L, Caractere **argv) {
  Inteiro status;
  Imutável Caractere *fname = argv[0];
  Se (strcmp(fname, "-") == 0 && strcmp(argv[-1], "--") != 0)
    fname = NULL;  /* stdin */
  status = sol_loadfile(L, fname);
  Se (status == SOL_OK) {
    Inteiro n = pushargs(L);  /* push arguments to script */
    status = docall(L, n, SOL_MULTRET);
  }
  Retorne report(L, status);
}


/* bits of various argument indicators in 'args' */
#Defina has_error	1	/* bad option */
#Defina has_i		2	/* -i */
#Defina has_v		4	/* -v */
#Defina has_e		8	/* -e */
#Defina has_E		16	/* -E */
#Defina has_help	32	/* --help */
#Defina has_lsp		64	/* --lsp */
#Defina has_build	128	/* -b */



Fixo Inteiro run_bundle (sol_State *L, Caractere **argv, Inteiro argc) {
  FILE *f;
  Caractere path[512];
  Caractere sig[4];
  sol_Integer size;
  
  #Se Definido(SOL_USE_WINDOWS)
  Se (GetModuleFileNameA(NULL, path, 512) == 0) Retorne 0;
  #Senão
  /* POSIX path detection would go here */
  Retorne 0;
  #FimSe

  f = fopen(path, "rb");
  Se (f == NULL) Retorne 0;

  fseek(f, -12, SEEK_END); /* 8 bytes size + 4 bytes sig */
  Se (fread(&size, 1, 8, f) != 8) { fclose(f); Retorne 0; }
  Se (fread(sig, 1, 4, f) != 4) { fclose(f); Retorne 0; }

  Se (memcmp(sig, SOL_BUNDLE_SIG, 4) != 0) { fclose(f); Retorne 0; }

  /* Encontrou bundle! */
  fseek(f, -(12 + size), SEEK_END);
  {
    Caractere *buff = cast(Caractere *, malloc(cast_sizet(size)));
    Se (buff == NULL) { fclose(f); Retorne 0; }
    Se (fread(buff, 1, cast_sizet(size), f) != cast_sizet(size)) { 
      free(buff); fclose(f); Retorne 0; 
    }
    fclose(f);
    Se (sol_loadbuffer(L, buff, cast_sizet(size), path) != SOL_OK) {
        free(buff);
        Retorne report(L, SOL_ERRRUN);
    }
    free(buff);
  }
  
  createargtable(L, argv, argc, 0);  /* Force script = 0 Para bundle */
  {
    Inteiro n = pushargs(L);
    Retorne report(L, docall(L, n, SOL_MULTRET)) == SOL_OK;
  }
}


Fixo Inteiro bundle_writer (sol_State *L, Imutável Vazio *p, size_t sz, Vazio *ud) {
  (Vazio)L;
  Retorne (fwrite(p, 1, sz, cast(FILE*, ud)) == sz) ? 0 : 1;
}


Fixo Inteiro bundle_script (sol_State *L, Imutável Caractere *script, Imutável Caractere *output) {
  FILE *f_in, *f_out;
  Caractere self_path[512];
  Caractere buff[4096];
  size_t n;
  sol_Integer start_pos, end_pos, bytecode_size;

  Se (sol_loadfile(L, script) != SOL_OK) Retorne report(L, SOL_ERRFILE);

  #Se Definido(SOL_USE_WINDOWS)
  Se (GetModuleFileNameA(NULL, self_path, 512) == 0) Retorne 0;
  #Senão
  sol_writestringerror("%s", "erro: plataforma não suportada para geração de executável\n");
  Retorne 0;
  #FimSe

  f_in = fopen(self_path, "rb");
  Se (f_in == NULL) Retorne 0;

  f_out = fopen(output, "wb");
  Se (f_out == NULL) { fclose(f_in); Retorne 0; }

  /* Copia o interpretador */
  Enquanto ((n = fread(buff, 1, meça(buff), f_in)) > 0) {
    fwrite(buff, 1, n, f_out);
  }
  fclose(f_in);

  /* Posição inicial do bytecode */
  start_pos = cast(sol_Integer, ftell(f_out));
  
  /* Dump bytecode */
  Se (sol_dump(L, bundle_writer, f_out, 0) != 0) {
    fclose(f_out);
    Retorne 0;
  }

  end_pos = cast(sol_Integer, ftell(f_out));
  bytecode_size = end_pos - start_pos;

  /* Escreve rodapé */
  fwrite(&bytecode_size, 1, 8, f_out);
  fwrite(SOL_BUNDLE_SIG, 1, 4, f_out);

  fclose(f_out);
  Retorne 1;
}


/*
** Traverses all arguments from 'argv', returning a mask with those
** needed before running any Sol code or an Erro code Se it finds any
** invalid argument. In Caso of Erro, 'first' is the index of the bad
** argument.  Otherwise, 'first' is -1 Se there is no program name,
** 0 Se there is no script name, or the index of the script name.
*/
Fixo Inteiro collectargs (Caractere **argv, Inteiro *first) {
  Inteiro args = 0;
  Inteiro i;
  Se (argv[0] != NULL) {  /* is there a program name? */
    Se (argv[0][0])  /* not empty? */
      progname = argv[0];  /* save it */
  }
  Senão {  /* no program name */
    *first = -1;
    Retorne 0;
  }
  Para (i = 1; argv[i] != NULL; i++) {  /* handle arguments */
    *first = i;
    Se (argv[i][0] != '-')  /* not an option? */
        Retorne args;  /* stop handling options */
    Troque (argv[i][1]) {  /* Senão check option */
      Caso '-':  /* '--' */
        Se (argv[i][2] != '\0') { /* extra characters after '--'? */
          Se (strcmp(argv[i], "--help") == 0 || strcmp(argv[i], "--ajuda") == 0)
            Retorne has_help;
          Se (strcmp(argv[i], "--version") == 0 || strcmp(argv[i], "--versao") == 0 || strcmp(argv[i], "--versão") == 0) {
            args |= has_v;
            Interrompa;
          }
          Se (strcmp(argv[i], "--lsp") == 0) {
            Retorne has_lsp;
          }
          Retorne has_error;  /* invalid option */
        }
        /* Se there is a script name, it comes after '--' */
        *first = (argv[i + 1] != NULL) ? i + 1 : 0;
        Retorne args;
      Caso '\0':  /* '-' */
        Retorne args;  /* script "name" is '-' */
      Caso 'E':
        Se (argv[i][2] != '\0')  /* extra characters? */
          Retorne has_error;  /* invalid option */
        args |= has_E;
        Interrompa;
      Caso 'W':
        Se (argv[i][2] != '\0')  /* extra characters? */
          Retorne has_error;  /* invalid option */
        Interrompa;
      Caso 'i':
        args |= has_i;  /* (-i implies -v) *//* FALLTHROUGH */
      Caso 'v':
        Se (argv[i][2] != '\0')  /* extra characters? */
          Retorne has_error;  /* invalid option */
        args |= has_v;
        Interrompa;
      Caso 'b':
        args |= has_build;
        Interrompa;
      Caso 'o':
        Se (argv[i][2] == '\0') {
          i++;
          Se (argv[i] == NULL || argv[i][0] == '-') Retorne has_error;
          outputname = argv[i];
        } Senão {
          outputname = argv[i] + 2;
        }
        Interrompa;
      Padrão:  /* invalid option */
        Retorne has_error;
    }
  }
  *first = 0;  /* no script name */
  Retorne args;
}


/*
** Processes options 'e' and 'l', which involve running Sol code, and
** 'W', which also affects the state.
** Returns 0 Se some code raises an Erro.
*/
Fixo Inteiro runargs (sol_State *L, Caractere **argv, Inteiro n) {
  Inteiro i;
  Para (i = 1; i < n; i++) {
    Inteiro option = argv[i][1];
    sol_assert(argv[i][0] == '-');  /* already checked */
    Troque (option) {
      Caso 'e':  Caso 'l': {
        Inteiro status;
        Caractere *extra = argv[i] + 2;  /* both options need an argument */
        Se (*extra == '\0') extra = argv[++i];
        sol_assert(extra != NULL);
        status = (option == 'e')
                 ? dostring(L, extra, "=(command Linha)")
                 : dolibrary(L, extra);
        Se (status != SOL_OK) Retorne 0;
        Interrompa;
      }
      Caso 'W':
        sol_warning(L, "@on", 0);  /* warnings on */
        Interrompa;
      Caso 'b':
        Interrompa;
      Caso 'o':
        Se (argv[i][2] == '\0') i++;
        Interrompa;
    }
  }
  Retorne 1;
}


Fixo Inteiro handle_luainit (sol_State *L) {
  Imutável Caractere *name = "=" SOL_INITVARVERSION;
  Imutável Caractere *init = getenv(name + 1);
  Se (init == NULL) {
    name = "=" SOL_INIT_VAR;
    init = getenv(name + 1);  /* try alternative name */
  }
  Se (init == NULL) Retorne SOL_OK;
  Senão Se (init[0] == '@')
    Retorne dofile(L, init+1);
  Senão
    Retorne dostring(L, init, name);
}


