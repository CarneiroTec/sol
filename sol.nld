/*
** Use 'sigaction' when available.
*/
Fixo Vazio setsignal (Inteiro sig, Vazio (*handler)(Inteiro)) {
  Estrutura sigaction sa;
  sa.sa_handler = handler;
  sa.sa_flags = 0;
  sigemptyset(&sa.sa_mask);  /* Faça not mask any signal */
  sigaction(sig, &sa, NULL);
}

#Senão           /* }{ */

#Defina setsignal            signal

#FimSe                               /* } */


/*
** Hook set by signal function to stop the interpreter.
*/
Fixo Vazio lstop (sol_State *L, sol_Debug *ar) {
  (Vazio)ar;  /* unused arg. */
  sol_sethook(L, NULL, 0, 0);  /* reset hook */
  solL_error(L, "execução interrompida!");
}


/*
** Function to be called at a C signal. Because a C signal cannot
** just change a Sol state (as there is no proper synchronization),
** this function only sets a hook that, when called, will stop the
** interpreter.
*/
Fixo Vazio laction (Inteiro i) {
  Inteiro flag = SOL_MASKCALL | SOL_MASKRET | SOL_MASKLINE | SOL_MASKCOUNT;
  setsignal(i, SIG_DFL); /* Se another SIGINT happens, terminate process */
  sol_sethook(globalL, lstop, flag, 1);
}


Fixo Vazio print_usage (Imutável Caractere *badoption) {
  sol_writestringerror("%s: ", progname);
  Se (badoption == NULL) {}
  Senão Se (badoption[1] == 'e' || badoption[1] == 'l')
    sol_writestringerror("'%s' precisa de um argumento\n", badoption);
  Senão
    sol_writestringerror("opção não reconhecida '%s'\n", badoption);
  sol_writestringerror(
  "Uso: %s [opções] [script [argumentos]]\n"
  "\n"
  "Opções disponíveis:\n"
  "  -e cmd    executa a string 'cmd'\n"
  "  -i        entra no modo interativo após executar o script\n"
  "  -l mod    carrega a biblioteca 'mod' como global 'mod'\n"
  "  -l g=mod  carrega a biblioteca 'mod' como global 'g'\n"
  "  -v        mostra informações da versão\n"
  "  -E        ignora variáveis de ambiente\n"
  "  -W        ativa avisos\n"
  "  --        para de processar opções\n"
  "  -         executa entrada padrão como script\n"
  "  -b        gera um executável a partir do script\n"
  "  -o nome   especifica o nome do arquivo de saída (padrão: saida.exe)\n"
  "  --help    mostra esta mensagem de ajuda\n"
  "  --ajuda   mostra esta mensagem de ajuda\n"
  "  --versao  mostra informações da versão\n"
  ,
  progname);
}


/*
** Prints an Erro message, adding the program name in front of it
** (Se present)
*/
Fixo Vazio l_message (Imutável Caractere *pname, Imutável Caractere *msg) {
  Se (pname) sol_writestringerror("%s: ", pname);
  sol_writestringerror("%s\n", msg);
}


/*
** Check whether 'status' is not OK and, Se so, prints the Erro
** message on the top of the stack.
*/
Fixo Inteiro report (sol_State *L, Inteiro status) {
  Se (status != SOL_OK) {
    Imutável Caractere *msg = sol_tostring(L, -1);
    Se (msg == NULL)
      msg = "(mensagem de erro não é texto)";
    l_message(progname, msg);
    sol_pop(L, 1);  /* remove message */
  }
  Retorne status;
}


/*
** Message handler used to run all chunks
*/
Fixo Inteiro msghandler (sol_State *L) {
  Imutável Caractere *msg = sol_tostring(L, 1);
  Se (msg == NULL) {  /* is Erro object not a string? */
    Se (sol_callmeta(L, 1, "__converta_para_texto") &&  /* does it have a metamethod */
        sol_type(L, -1) == SOL_TSTRING)  /* that produces a string? */
      Retorne 1;  /* that is the message */
    Senão
      msg = sol_pushfstring(L, "(objeto de erro é um valor %s)",
                               solL_typename(L, 1));
  }
  sol_traceback(L, L, msg, 1);  /* append a standard traceback */
  Retorne 1;  /* Retorne the traceback */
}


/*
** Interface to 'sol_pcall', which sets appropriate message function
** and C-signal handler. Used to run all chunks.
*/
Fixo Inteiro docall (sol_State *L, Inteiro narg, Inteiro nres) {
  Inteiro status;
  Inteiro base = sol_gettop(L) - narg;  /* function index */
  sol_pushcfunction(L, msghandler);  /* push message handler */
  sol_insert(L, base);  /* put it under function and args */
  globalL = L;  /* to be available to 'laction' */
  setsignal(SIGINT, laction);  /* set C-signal handler */
  status = sol_pcall(L, narg, nres, base);
  setsignal(SIGINT, SIG_DFL); /* reset C-signal handler */
  sol_remove(L, base);  /* remove message handler from the stack */
  Retorne status;
}


